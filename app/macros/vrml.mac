/tracking/verbose 0
/run/verbose 1
/run/setStatusIncidentGammaInformation true
/run/setStatusIncidentSourceInformation false

/run/initialize
/process/had/rdm/thresholdForVeryLongDecayTime 1.0e+60 year

/geometry/setRadiusNaI 25.4 mm
/geometry/setThicknessNaI 50.8 mm
/geometry/setThicknessHousing 0.508 mm
/geometry/setThicknessAbsorber 20 mm
/geometry/setThicknessDesk 50 mm
/geometry/setThicknessSourceHolder 0.2 mm
/geometry/setDeskSourceDistance 100 mm
/geometry/setSourceNaIDistance 100 mm
/geometry/setAbsorberMaterial G4_Pb

/run/reinitializeGeometry     


